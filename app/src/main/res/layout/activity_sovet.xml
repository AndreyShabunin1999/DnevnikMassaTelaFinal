<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="770dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30dp"
                android:textColor="@color/purple_700"
                android:text="@string/string_sovet" />

            <FrameLayout
                android:id="@+id/state1"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="5dp"
                android:background="@color/white"
                android:clickable="true">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="43dp" />


                <TextView
                    android:id="@+id/tvblockname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Как худеть? Мнения экспертов с мировым именем"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/state2"
                android:layout_gravity="right"
                android:layout_marginLeft="180dp"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:layout_marginTop="50dp"
                android:background="@color/white"
                android:clickable = "true" >


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2"
                    android:layout_marginTop="43dp"/>

                <TextView
                    android:id="@+id/tvblockname2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:text="Самые действенные и эффективные диеты" />
            </FrameLayout>


            <FrameLayout
                android:id="@+id/state3"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="220dp"
                android:background="@color/white"
                android:clickable = "true" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView3"
                    android:layout_marginTop="43dp"/>

                <TextView
                    android:id="@+id/tvblockname3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:text="8 этапов похудения, что надо знать чтобы точно похудеть" />
            </FrameLayout>


            <FrameLayout
                android:id="@+id/state4"
                android:layout_gravity="right"
                android:layout_marginLeft="180dp"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:layout_marginTop="220dp"
                android:background="@color/white"
                android:clickable = "true" >


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView4"
                    android:layout_marginTop="43dp"/>

                <TextView
                    android:id="@+id/tvblockname4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:text="6 лучших упражнений для всего тела" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/state5"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="390dp"
                android:background="@color/white"
                android:clickable = "true" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView5"
                    android:layout_marginTop="43dp"/>

                <TextView
                    android:id="@+id/tvblockname5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:text="Вода и как она помогает в борьбе с лишним весом?" />
            </FrameLayout>


            <FrameLayout
                android:id="@+id/state6"
                android:layout_gravity="right"
                android:layout_marginLeft="180dp"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:layout_marginTop="390dp"
                android:background="@color/white"
                android:clickable = "true" >


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView6"
                    android:layout_marginTop="43dp"/>

                <TextView
                    android:id="@+id/tvblockname6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:text="Избыточный вес: причины, последствия, способы избавления" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/state7"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="560dp"
                android:background="@color/white"
                android:clickable = "true" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView7"
                    android:layout_marginTop="43dp"/>

                <TextView
                    android:id="@+id/tvblockname7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:text="20 продуктов, которые помогут сбросить вес" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/state8"
                android:layout_gravity="right"
                android:layout_marginLeft="180dp"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:layout_marginTop="560dp"
                android:background="@color/white"
                android:clickable = "true" >


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView8"
                    android:layout_marginTop="43dp"/>

                <TextView
                    android:id="@+id/tvblockname8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:text="Как пешие прогулки помогают худеть. Эффект интервальной ходьбы" />
            </FrameLayout>

        </RelativeLayout>
    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:background="@color/white"
        app:menu="@menu/bottom_navigation" />
</RelativeLayout>