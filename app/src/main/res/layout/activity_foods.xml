<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/zavtrak"
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="190dp"
            android:background="@color/white"
            android:clickable = "true" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageView"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:id="@+id/tvblockname"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Завтрак" />

            <TextView
                android:id="@+id/tvkal"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="left"
                android:layout_marginTop="115dp"
                android:text="0 ккал" />

            <TextView
                android:id="@+id/tvreckal"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="left"
                android:layout_marginTop="130dp"
                android:text="Рекомендуется: 0 ккал" />
        </FrameLayout>



        <FrameLayout
            android:id="@+id/obed"
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="190dp"
            android:background="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageView1"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:id="@+id/tvblockname2"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Обед" />

            <TextView
                android:id="@+id/tvkal2"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="115dp"
                android:text="0 ккал" />

            <TextView
                android:id="@+id/tvreckal2"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="left"
                android:layout_marginTop="130dp"
                android:text="Рекомендуется: 0 ккал" />
        </FrameLayout>


        <FrameLayout
            android:id="@+id/uzhin"
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="350dp"
            android:background="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageView2"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:id="@+id/tvblockname3"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Ужин" />

            <TextView
                android:id="@+id/tvkal3"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="left"
                android:layout_marginTop="115dp"
                android:text="0 ккал" />

            <TextView
                android:id="@+id/tvreckal3"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="left"
                android:layout_marginTop="130dp"
                android:text="Рекомендуется: 0 ккал" />
        </FrameLayout>



        <FrameLayout
            android:id="@+id/perekus"
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="350dp"
            android:background="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageView3"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:id="@+id/tvblockname4"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Перекус" />

            <TextView
                android:id="@+id/tvkal4"
                android:textSize="13sp"
                android:layout_width="wrap_content"
