                android:layout_marginLeft="5dp"
                android:layout_gravity="left"
                android:layout_marginTop="130dp"
                android:text="Рекомендуется: 0 ккал" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fr"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/green">

            <ProgressBar
                android:id="@+id/progressugl"
                android:layout_width="80dp"
                android:layout_height="10dp"
                android:layout_marginTop="126dp"
                android:layout_marginLeft="16dp"
                android:progress="50"
                android:progressTint="@color/white"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                />

            <ProgressBar
                android:id="@+id/progressprot"
                android:layout_width="80dp"
                android:layout_height="10dp"
                android:layout_marginTop="126dp"
                android:progress="50"
                android:layout_gravity="center_horizontal"
                android:progressTint="@color/white"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                />

            <ProgressBar
                android:id="@+id/progressfat"
                android:layout_width="80dp"
                android:layout_height="10dp"
                android:layout_marginTop="126dp"
                android:progress="50"
                android:layout_gravity="right"
                android:layout_marginRight="16dp"
                android:progressTint="@color/white"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                />


            <TextView
                android:id="@+id/tveating"
                android:layout_width="65dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="45dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tveatingtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="left"
                android:layout_marginTop="65dp"
                android:text="Съедено" />

            <TextView
                android:id="@+id/tvupr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginRight="45dp"
                android:layout_gravity="right"
                android:layout_marginTop="45dp"
                android:text="462" />

            <TextView
                android:id="@+id/tvuprtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_marginRight="33dp"
                android:layout_gravity="right"
                android:layout_marginTop="65dp"
                android:text="Сожжено" />

            <TextView
                android:id="@+id/tvost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                />

            <TextView
                android:id="@+id/tvosttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:text="Осталось" />


            <TextView
                android:id="@+id/tvugl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="left"
                android:layout_marginTop="105dp"
                android:text="Углеводы" />


            <TextView
                android:id="@+id/tvzhir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_marginRight="40dp"
                android:layout_gravity="right"
                android:layout_marginTop="105dp"
                android:text="Жиры" />

            <TextView
                android:id="@+id/tvbelok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="105dp"
                android:text="Белки" />

            <TextView
                android:id="@+id/tvuglznach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="left"
                android:layout_marginTop="140dp"
                android:text="36 / 239г" />


            <TextView
                android:id="@+id/tvzhirznach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="140dp"
                android:text="57 / 63г" />

            <TextView
                android:id="@+id/tvbelokznach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="140dp"
                android:text="36 / 96г" />


            <Spinner
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:id="@+id/spActivnost"
                android:entries="@array/AcrivnostName"
                android:layout_gravity="right"
                android:background="@color/colorAccent">

            </Spinner>

        </FrameLayout>

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation"
        android:background="@color/white"/>
</RelativeLayout>